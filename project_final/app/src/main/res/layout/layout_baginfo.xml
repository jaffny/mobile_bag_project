<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bag_3"
        android:layout_width="300px"
        android:layout_height="300px" />

    <TextView
        android:layout_below="@id/iv_bag_3"
        android:id="@+id/tv_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title:"/>
    <TextView
        android:layout_below="@id/iv_bag_3"
        android:layout_toRightOf="@id/tv_title_3"
        android:id="@+id/tv_titlecontent_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_below="@id/tv_title_3"
        android:id="@+id/tv_price_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price:" />
    <TextView
        android:layout_toRightOf="@id/tv_price_3"
        android:layout_below="@id/tv_title_3"
        android:id="@+id/tv_pricecontent_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/tv_price_3"
        android:id="@+id/tv_renter_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="renter:"/>
    <TextView
        android:layout_toRightOf="@id/tv_renter_3"
        android:layout_below="@id/tv_price_3"
        android:id="@+id/tv_rentercontent_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/tv_renter_3"
        android:text="Get it!"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:id="@+id/btn_getit_3"
        android:onClick="getIt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/tv_description_3"
        android:layout_below="@id/btn_getit_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_descontent_3"
        android:layout_below="@id/tv_description_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review:"
        android:id="@+id/tv_review_3"
        android:layout_below="@id/tv_descontent_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reviewcontent_3"
        android:layout_below="@id/tv_review_3"/>

</RelativeLayout>