<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:id="@+id/ll_search_5">
        <EditText
            android:id="@+id/ll_searchtext_5"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search"
            android:onClick="isearch"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_btn_5"
        android:layout_below="@id/ll_search_5">
        <Button
            android:id="@+id/btn_changetheme_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Theme"
            android:onClick="tChange"/>

        <Button
            android:id="@+id/btn_buybagnoti_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Bag Noti"
            android:onClick="buyBagNoti"/>
        <Button
            android:id="@+id/btn_myaccount_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyAccount"
            android:onClick="myAccount"/>
    </LinearLayout>


    <ListView
    android:id="@+id/lv_baglist_5"
    android:layout_below="@id/ll_btn_5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    </ListView>

    <ListView
        android:id="@+id/lv_baglist2_5"
        android:layout_below="@id/ll_btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
    
</RelativeLayout>